route-policy V6_LAR_DIRECT_INBOUND
  if community matches-any BB1-PREFIXES or community matches-any BB1-PREFIXES-SECONDARY then
    done
  endif
end-policy
!
route-policy V6_LAR_DIRECT_OUTBOUND
  if destination in v6_default_route then
    done
  endif
end-policy

